{
    "cli": {
        "version": ">= 6.1.0",
        "appVersionSource": "remote"
    },
    "build": {
        "development": {
            "developmentClient": true,
            "distribution": "internal",
            "ios": {
                "simulator": true
            },
            "env": {
                "APP_VARIANT": "development"
            }
        },
        "preview": {
            "distribution": "internal",
            "ios": {
                "simulator": false
            },
            "android": {
                "buildType": "apk"
            },
            "env": {
                "APP_VARIANT": "preview"
            }
        },
        "production": {
            "autoIncrement": true,
            "ios": {
                "simulator": false,
                "distribution": "store",
                "resourceClass": "medium"
            },
            "android": {
                "buildType": "app-bundle",
                "resourceClass": "medium"
            },
            "env": {
                "APP_VARIANT": "production"
            }
        }
    },
    "submit": {
        "production": {
            "ios": {
                "appleId": "${APPLE_ID}",
                "ascAppId": "${ASC_APP_ID}",
                "appleTeamId": "${APPLE_TEAM_ID}"
            },
            "android": {
                "serviceAccountKeyPath": "${GOOGLE_SERVICE_ACCOUNT_KEY_PATH}",
                "track": "internal"
            }
        }
    }
}