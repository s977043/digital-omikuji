{
  "metadata": {
    "name": "ドキュメント更新チェック指示",
    "description": "プログラム更新時にドキュメントが最新かチェックし、必要に応じて更新提案を行う指示セット",
    "version": "1.0.0",
    "author": "digital-omikuji-team"
  },
  "commands": [
    {
      "type": "analyze-changes",
      "command": "analyze --type \"code-changes\" --compare \"HEAD~1\" --include \"app,scripts,package.json\" --output \"temp-analysis.md\" --language \"japanese\"",
      "options": {
        "cwd": "."
      },
      "required": false,
      "description": "最近のコード変更を分析してドキュメント更新の必要性を判断",
      "delay": 3000
    },
    {
      "type": "check-readme-sync",
      "command": "docs validate --target \"README.md\" --source \"package.json,app/routes\" --check-sync --language \"japanese\"",
      "options": {
        "cwd": "."
      },
      "required": false,
      "description": "README.mdとコードの同期状態をチェック",
      "delay": 2000
    },
    {
      "type": "check-api-docs",
      "command": "docs validate --target \"documents/API仕様書.md\" --source \"app/routes\" --check-api-sync --language \"japanese\"",
      "options": {
        "cwd": "."
      },
      "required": false,
      "description": "API仕様書とルートファイルの同期状態をチェック",
      "delay": 2000
    },
    {
      "type": "suggest-updates",
      "command": "docs suggest --based-on \"temp-analysis.md\" --targets \"README.md,documents/\" --language \"japanese\" --output \"doc-update-suggestions.md\"",
      "options": {
        "cwd": "."
      },
      "required": false,
      "description": "ドキュメント更新の提案を生成",
      "delay": 3000
    },
    {
      "type": "validate-structure",
      "command": "docs validate --structure --required \"概要,使用技術,機能,使い方,開発方法\" --target \"README.md\" --language \"japanese\"",
      "options": {
        "cwd": "."
      },
      "required": false,
      "description": "ドキュメント構造の妥当性をチェック"
    }
  ]
}