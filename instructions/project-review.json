{
  "metadata": {
    "name": "プロジェクトレビュー指示",
    "description": "プロジェクト全体のコードレビューとドキュメント生成を行う指示セット",
    "version": "1.0.0",
    "author": "digital-omikuji-team"
  },
  "commands": [
    {
      "type": "review-project",
      "command": "review --project --exclude \"node_modules,build,dist\" --language \"typescript\" --rules \"typescript-strict,react-best-practices,performance-optimization\"",
      "options": {
        "cwd": "."
      },
      "required": false,
      "description": "プロジェクト全体のコードレビュー"
    },
    {
      "type": "generate-docs",
      "command": "docs generate --type \"api\" --input \"app/routes\" --output \"documents/generated-api.md\" --language \"japanese\"",
      "options": {
        "cwd": "."
      },
      "required": false,
      "description": "APIドキュメントの生成",
      "delay": 2000
    },
    {
      "type": "generate-readme",
      "command": "docs generate --type \"readme\" --project-info \"digital-omikuji\" --language \"japanese\" --include-examples",
      "options": {
        "cwd": "."
      },
      "required": false,
      "description": "README.mdの更新提案を生成",
      "delay": 2000
    }
  ]
}