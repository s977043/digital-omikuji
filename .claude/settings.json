{
  "permissions": {
    "deny": [
      "Read(./.env)",
      "Read(./.env.*)",
      "Read(./secrets/**)",
      "Read(./**/*secret*.*)",
      "Read(./**/*credentials*.*)",
      "Read(./node_modules/**)",
      "Read(./pnpm-lock.yaml)"
    ],
    "allow": [
      "Bash(pnpm install)",
      "Bash(pnpm test)",
      "Bash(pnpm build)",
      "Bash(pnpm start)",
      "Bash(git status)",
      "Bash(git diff:*)"
    ]
  },
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Write|Edit|MultiEdit",
        "hooks": [
          {
            "type": "command",
            "command": "\"$CLAUDE_PROJECT_DIR\"/.claude/hooks/format.sh"
          }
        ]
      }
    ]
  }
}
