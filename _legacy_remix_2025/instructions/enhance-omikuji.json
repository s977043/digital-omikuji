{
  "metadata": {
    "name": "おみくじ機能拡張指示",
    "description": "おみくじアプリの機能を拡張するための指示セット",
    "version": "1.0.0",
    "author": "digital-omikuji-team"
  },
  "commands": [
    {
      "type": "generate-function",
      "command": "generate function --name \"getDetailedFortune\" --input \"fortuneType:string\" --output \"DetailedFortune\" --language \"typescript\"",
      "options": {
        "cwd": "."
      },
      "required": true,
      "description": "詳細なおみくじ情報を取得する関数を生成"
    },
    {
      "type": "generate-content",
      "command": "generate content --type \"fortune-descriptions\" --count 4 --style \"traditional-japanese\" --output \"app/data/fortune-descriptions.ts\"",
      "options": {
        "cwd": "."
      },
      "required": false,
      "description": "おみくじの説明文を生成",
      "delay": 1500
    },
    {
      "type": "generate-component",
      "command": "generate component --name \"FortuneDetail\" --type \"react-tsx\" --props \"fortune:string,description:string\" --template \"templates/component.tsx.template\"",
      "options": {
        "cwd": "."
      },
      "required": false,
      "description": "詳細表示用コンポーネントを生成",
      "delay": 1000
    },
    {
      "type": "refactor-optimize",
      "command": "refactor --file \"app/routes/index.tsx\" --optimize \"performance,readability\" --preserve-functionality",
      "options": {
        "cwd": "."
      },
      "required": false,
      "description": "メインコンポーネントのリファクタリング",
      "delay": 2000
    }
  ]
}